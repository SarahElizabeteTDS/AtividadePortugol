programa
{
	
	funcao inicio()
	{
		inteiro idade, somaIdades

		escreva("Insira sua idade, para descobrir a soma de todas as idades que você já teve!","\n")
		leia(idade)

		somaIdades = idade*(idade + 1)/2

		escreva("A soma de todas as idades que você já teve, é de: ",somaIdades, " anos.")
		
	}
}
